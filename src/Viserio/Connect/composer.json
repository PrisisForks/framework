{
    "name"       : "viserio/connect",
    "type"       : "library",
    "description": "The Viserio Connectors package.",
    "keywords"   : ["narrowspark", "viserio", "connectors", "predis", "connect", "pdo"],
    "license"    : "MIT",
    "homepage"   : "http://github.com/Narrowspark/connect",
    "support"    : {
        "issues": "https://github.com/narrowspark/framework/issues",
        "source": "https://github.com/narrowspark/framework"
    },
    "authors"    : [
        {
          "name"    : "Daniel Bannert",
          "email"   : "d.bannert@anolilab.de",
          "homepage": "http://www.anolilab.de",
          "role"    : "Developer"
        }
    ],
    "require": {
        "php"                          : ">=5.6.4.4",
        "viserio/contracts"            : "self.version",
        "viserio/config"               : "self.version",
        "viserio/support"              : "self.version"
    },
    "require-dev": {
        "fabpot/php-cs-fixer"          : "dev-master",
        "phpunit/phpunit"              : "~5.0.6",
        "predis/predis"                : "~1.0.1"
    },
    "autoload": {
        "psr-4": {
            "Viserio\\Connect\\"       : ""
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Viserio\\Connect\\Tests\\": "Tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master"               : "0.10.0-dev"
        }
    },
    "suggest": {
        "ext-apc"                      : "",
        "ext-memcached"                : "",
        "ext-mongo"                    : "",
        "ext-pdo"                      : "",
        "ext-pdo_dblib"                : "For MSSQL databases on Liunx/UNIX platform",
        "ext-pdo-firebird"             : "For Firebird databases",
        "ext-pdo-mysql"                : "For MySQL or MariaDB databases",
        "ext-pdo-pqsql"                : "For PostgreSQL databases",
        "ext-pdo-sqlite"               : "For SQLite databases",
        "ext-pdo_sqlsrv"               : "For MSSQL databases on Windows platform",
        "ext-pdo_oci"                  : "For Oracle databases",
        "ext-redis"                    : "",
        "predis/predis"                : "Required to use the redis cache and queue drivers (~1.0.3)."
    },
    "minimum-stability"                : "dev",
    "prefer-stable"                    : true
}
